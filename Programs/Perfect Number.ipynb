   "source": [
    "def Perfect_num(n):\n",
    "    r=0\n",
    "    for i in range(1,n):\n",
    "        if n%i==0:\n",
    "            r=r+i\n",
    "    if r==n:\n",
    "        return f'{n} is Perfect Number'\n",
    "    else:\n",
    "        return f'{n} is not Perfect Number'\n",
    "\n",
    "inp=int(input('Please Enter a Number: '))\n",
    "Perfect_num(inp)"
   ]
